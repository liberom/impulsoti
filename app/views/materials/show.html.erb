<p>
  <strong>Nome:</strong>
  <%= @material.name %>
</p>

<p>
  <strong>Quantidade:</strong>
  <%= @material.sum_quantity %>
</p>

<p><strong>Entradas e Retiradas:</strong></p>
<% @material.quantities.each do |quantity| %>
  <% unless quantity.amount == 0 %>
    <p> <%= quantity.amount %> </p>
  <% end %>
<% end %>

<%= link_to 'Editar', edit_material_path(@material) %> |
<%= link_to 'Voltar', materials_path %> |
<%= link_to 'Apagar', @material, method: :delete, data: { confirm: 'Tem certeza?' } %>
