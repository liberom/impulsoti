<h1>Materiais</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= material.quantity %></td>
        <td><%= link_to 'Exibir', material %></td>
        <td><%= link_to 'Editar', edit_material_path(material) %></td>
        <td><%= link_to 'Apagar', material, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Material', new_material_path %>
